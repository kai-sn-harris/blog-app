<%- include("./partials/header", {title: "Login"}) %>
    <%- include("./partials/nav", {active: "login"}) %>
    <% if(typeof error !== "undefined") { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <div class="container register-login-container">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="email">Email address</label>
                <input name="user[email]" type="email" class="form-control" id="email" aria-describedby="emailHelp">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input name="user[password]" type="password" class="form-control" id="password">
            </div>
            <button type="submit" class="btn btn-success">Login</button>
        </form>
    </div>

<%- include("./partials/footer") %>